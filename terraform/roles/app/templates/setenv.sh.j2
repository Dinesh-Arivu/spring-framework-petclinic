#!/bin/sh
# Tomcat JVM options and Spring datasource overrides
CATALINA_OPTS="$CATALINA_OPTS -Dspring.datasource.url=jdbc:mysql://{{ db_host }}:{{ db_port }}/{{ db_name }}?useUnicode=true"
CATALINA_OPTS="$CATALINA_OPTS -Dspring.datasource.username={{ db_user }}"
CATALINA_OPTS="$CATALINA_OPTS -Dspring.datasource.password={{ db_pass }}"
export CATALINA_OPTS
